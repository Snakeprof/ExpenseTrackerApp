<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Dialog"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.expensetracker.ExpensesDetailViewActivity"
    tools:showIn="@layout/activity_expenses_detail_view"
    android:background="@color/colorBackroundWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Itemname"
            android:paddingTop="10dp"
            android:textColor="@color/colorGray"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtdate"
            android:layout_below="@id/txtitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Itemname"
            android:textColor="@color/colorGray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/txtdate"
            android:layout_margin="10dp"
            android:background="@drawable/white_card"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/petrol" />

            <TextView
                android:id="@+id/txtamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Amount"
                android:textColor="@color/colorAccent"
                android:textSize="35sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/linear1"
            android:layout_margin="10dp"
            android:background="@drawable/white_card"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtdesciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Description Not Specified."
                android:textColor="@color/colorGray"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"/>


            <TextView
                android:id="@+id/txtduration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:text="Month Not Specified."
                android:textStyle="italic"
                android:textColor="@color/colorGray"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_below="@id/linear2"
            android:layout_margin="10dp"
            android:background="@drawable/white_card"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtforwho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="For Whom?"
                android:textColor="@color/colorGray"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img_forwho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/petrol" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear3"
            android:layout_margin="10dp"
            android:background="@drawable/white_card"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="10dp">


            <Button
                android:background="@drawable/roun_rect_orange"
                android:text=">> Search More Records"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
